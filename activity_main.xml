<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout
        android:id="@+id/mainLL"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
            android:id="@+id/autoExtractBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/auto_extract_button"
            android:textColor="@android:color/black"
            android:onClick="autoExtract"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

        <Switch
                android:id="@+id/autoChatSwitch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:textColor="@android:color/black"
                android:text="@string/auto_chat_button"
                android:textAlignment="center"/>

        <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_settings"
                android:onClick="autoChat"
                android:contentDescription="@string/setting"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

        <Switch
                android:id="@+id/autoLikeSwitch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:textColor="@android:color/black"
                android:text="@string/auto_like_button"
                android:textAlignment="center"/>

        <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_settings"
                android:onClick="autoLike"
                android:contentDescription="@string/setting"/>

    </LinearLayout>

</android.widget.LinearLayout>